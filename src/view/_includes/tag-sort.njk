
{%- macro list(tags) -%}
<ul>
  {%- for tag in tags -%}
    <li>{{ [tag,' extensions'] | join }}
    <li>{{ collections[ [tag,' extensions'] | join ] | length }}
    {%- if collections[ [tag,' extensions'] | join ] | length > 0 -%}
      <li>{{ tag | capitalize }}+
      <ul>
        {%- for post in collections[ [tag,' extensions'] |  join ] -%}
          <li>
            <a href="{{post.url}}">{{ post.data.title }}</a>
            {% if post.data.subtitle %}
              ({{ post.data.subtitle }})
            {% endif %}
          </li>
        {%- endfor -%}
      </ul>
    {%- endif -%}
  {%- endfor -%}
</ul>
{%- endmacro -%}