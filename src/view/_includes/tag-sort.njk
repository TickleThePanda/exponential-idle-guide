
{%- macro list(tags) -%}
<ul>
  {%- for tag in tags -%}
    <li>{{ ['ext-',tag] | join }}
    <li>{{ collections[ ['ext-',tag] | join ] | length }}
    {%- if collections[ ['ext-',tag] | join ] | length > 0 -%}
      <li>{{ tag | capitalize }}
      <ul>
        {%- for post in collections[ ['ext-',tag] |  join ] -%}
          <li>
            <a href="{{post.url}}">{{ post.data.title }}</a>
            {% if post.data.subtitle %}
              ({{ post.data.subtitle }})
            {% endif %}
          </li>
        {%- endfor -%}
      </ul>
    {%- endif -%}
  {%- endfor -%}
</ul>
{%- endmacro -%}