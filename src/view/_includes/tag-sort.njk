
{%- macro list(tags) -%}
<ul>
  {%- for tag in tags -%}
    {%- if collections['ext-'+tag] | length > 0 -%}
      <li>{{ tag | capitalize }}
      <ul>
        {%- for post in collections['ext-'+tag] -%}
          <li>
            <a href="{{post.url}}">{{ post.data.title }}</a>
            {% if post.data.subtitle %}
              ({{ post.data.subtitle }})
            {% endif %}
          </li>
        {%- endfor -%}
      </ul>
    {%- endif -%}
  {%- endfor -%}
</ul>
{%- endmacro -%}