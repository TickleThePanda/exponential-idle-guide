
{%- macro list(tags) -%}
<ul>
  {%- for tag in tags -%}
    {%- set tagged = ['ext-',tag] | join ] -%}
    <li>{{ tagged }}
    <li>{{ collections.tagged | length }}
    {%- if collections.tagged | length > 0 -%}
      <li>{{ tag | capitalize }}+
      <ul>
        {%- for post in collections.tagged -%}
          <li>
            <a href="{{post.url}}">{{ post.data.title }}</a>
            {% if post.data.subtitle %}
              ({{ post.data.subtitle }})
            {% endif %}
          </li>
        {%- endfor -%}
      </ul>
    {%- endif -%}
  {%- endfor -%}
</ul>
{%- endmacro -%}